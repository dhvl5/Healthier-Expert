<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/merriweather_sans_light"
        android:text="Sign Up"
        android:textColor="#000000"
        android:textSize="25sp"
        />

    <EditText
        android:id="@+id/fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/merriweather_sans_light"
        android:hint="Enter Your Full Name"
        android:textColor="#80000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fname"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/merriweather_sans_light"
        android:hint="Enter Your Email"
        android:textColor="#80000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/phoneno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/merriweather_sans_light"
        android:hint="Enter Your Phone Number"
        android:textColor="#80000000"
        android:textSize="15sp" />
    <EditText
        android:id="@+id/spassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneno"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/merriweather_sans_light"
        android:hint="Enter Your Password"
        android:textColor="#80000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_below="@id/spassword"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="20dp"
        />
    <RadioGroup
        android:id="@+id/rg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender">

        <RadioButton
            android:id="@+id/rd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="Male"
            android:textStyle="italic"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/rd2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="italic"
            android:layout_marginLeft="100dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/singupcont"
        android:fontFamily="@font/merriweather_sans_light"
        android:text="CONTINUE"
        android:textColor="#ffffff"
        android:textSize="20sp" />


    <View
        android:layout_width="130dp"
        android:layout_height="3dp"
        android:background="#036913"
        android:layout_below="@id/cont"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        />
    <View
        android:layout_width="70dp"
        android:layout_height="1dp"
        android:background="#036913"
        android:layout_below="@+id/cont"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="180dp"
        />
    <View
        android:layout_width="70dp"
        android:layout_height="1dp"
        android:background="#036913"
        android:layout_below="@+id/cont"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="260dp"
        />

    <TextView
        android:id="@+id/already_have_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cont"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/merriweather_sans_light"
        android:text="Already have an account?"
        android:textColor="#80000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/singins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cont"
        android:layout_marginLeft="263dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/merriweather_sans_light"
        android:text="Sign In"
        android:textColor="#02B65F"
        android:textSize="15sp" />

</RelativeLayout>