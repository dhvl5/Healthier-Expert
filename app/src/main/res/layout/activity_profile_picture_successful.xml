        android:layout_height="3dp"
        android:background="#036913"
        android:layout_below="@id/continue2"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="115dp"
        />
    <View
        android:layout_width="70dp"
        android:layout_height="1dp"
        android:background="#036913"
        android:layout_below="@+id/continue2"
