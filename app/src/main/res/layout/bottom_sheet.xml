<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bottom_sheet"
    app:behavior_hideable="true"
    app:behavior_peekHeight="290dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_bottomsheet">

        <View
            android:layout_width="100dp"
            android:layout_height="7dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/darker_gray" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Medicine Note"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/titleNoteEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="20dp"
            android:hint="Medicine Name"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:paddingEnd="10dp"/>

        <CheckBox
            android:id="@+id/morning_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morning"
            android:textColor="#ffffff"
            android:layout_marginTop="170dp"
            android:layout_marginStart="50dp"/>

        <CheckBox
            android:id="@+id/noon_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noon"
            android:textColor="#ffffff"
            android:layout_marginStart="160dp"
            android:layout_marginTop="170dp"/>

        <CheckBox
            android:id="@+id/evening_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evening"
            android:textColor="#ffffff"
            android:layout_marginStart="250dp"
            android:layout_marginTop="170dp"/>

        <Button
            android:id="@+id/createNoteBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Create Medicine Alert"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="220dp"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>