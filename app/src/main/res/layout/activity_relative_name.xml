<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeName">

    <TextView
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relative Details"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/merriweather_sans"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/relative_name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/merriweather_sans_light"
        android:hint="Enter Relative Name1"
        android:textColor="#80000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/relative_email1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_name1"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/merriweather_sans_light"
        android:hint="Enter Relative Email Id1"
        android:textColor="#80000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/relative_contact_no1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_email1"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/merriweather_sans_light"
        android:hint="Enter Relative Contact no1"
        android:textColor="#80000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/relative_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_contact_no1"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/merriweather_sans_light"
        android:hint="Enter Relative Name2"
        android:textColor="#80000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/relative_email2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_name2"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/merriweather_sans_light"
        android:hint="Enter Relative Email Id2"
        android:textColor="#80000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/relative_contact_no2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_email2"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/merriweather_sans_light"
        android:hint="Enter Relative Contact No2"
        android:textColor="#80000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/relative_name3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_contact_no2"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/merriweather_sans_light"
        android:hint="Enter Relative Name3"
        android:textColor="#80000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/relative_email3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_name3"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/merriweather_sans_light"
        android:hint="Enter Relative Email Id3"
        android:textColor="#80000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/relative_contact_no3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_email3"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/merriweather_sans_light"
        android:hint="Enter Relative Contact No3"
        android:textColor="#80000000"
        android:textSize="15sp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_contact_no3"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/submit"
        android:fontFamily="@font/merriweather_sans_light"
        android:text="SUBMIT"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>