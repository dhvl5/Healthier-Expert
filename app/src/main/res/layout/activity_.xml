<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity">

    <TextView
        android:id="@+id/activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="62dp"
        android:fontFamily="@font/merriweather_sans"
        android:text="Activity"
        android:textColor="#000000"
        android:textSize="20sp"
        />

    <View
        android:id="@+id/line1"
        android:layout_width="411dp"
        android:layout_height="1dp"
        android:background="#036913"
        android:layout_below="@id/activity"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/merriweather_sans"
        android:text="Status"
        android:textColor="#036913"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/activity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweather_sans"
        android:text="Activity"
        android:layout_below="@id/activity"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweather_sans"
        android:text="Report"
        android:layout_below="@id/activity"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:textSize="20sp"
        />

    <View
        android:id="@+id/line2"
        android:layout_width="411dp"
        android:layout_height="1dp"
        android:background="#036913"
        android:layout_below="@id/status"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/line3"
        android:layout_width="138dp"
        android:layout_height="3dp"
        android:background="#036913"
        android:layout_below="@id/status"
        android:layout_marginTop="9dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/crd1"
        android:layout_width="330dp"
        android:layout_height="165dp"
        android:layout_below="@+id/activity2"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp">
        
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/walking"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="18dp"
            />

        <TextView
            android:id="@+id/walking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_sans"
            android:text="Walking"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="48dp"
            />

        <TextView
            android:id="@+id/steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_sans"
            android:text="2090"
            android:textColor="#036913"
            android:textSize="20sp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="65dp"
            />

        <TextView
            android:id="@+id/calories_burnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_sans"
            android:text="Calorie Burnt: 104 kcals"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="140dp"
            />

        <TextView
            android:id="@+id/mins20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_sans"
            android:text="20 mins"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="46dp"
            />

        <TextView
            android:id="@+id/pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_sans"
            android:text="12:30 PM"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="75dp"
            />

        <TextView
            android:id="@+id/daily_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_sans"
            android:text="Daily Target: 10000 Steps"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginLeft="183dp"
            android:layout_marginTop="138dp"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/crd2"
        android:layout_width="330dp"
        android:layout_height="165dp"
        android:layout_below="@id/crd1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/running"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="18dp"
            />

        <TextView
            android:id="@+id/running"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_sans"
            android:text="Running"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="47dp"
            />

        <TextView
            android:id="@+id/kms07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_sans"
            android:text="07 Kms"
            android:textColor="#000000"
            android:textSize="20sp"
